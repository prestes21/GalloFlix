@model GalloFlix.DataTransferObjects.LoginDto;
@{
    ViewData["Title"] = "Área Administrador";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css">
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
</div>
@* Taghelper - Auxiliar de tag*@
<form method="post" class="col-md-6 offset-md-3 col-lg-4 offset-lg-4 mt-5"> @* deita o formulário de login com tamanho médio, centralizado-offset- (utiliza 6 barras, a tela tem 12, 3  é o centro das 6 linhas que estamos usando)*@
    <div asp-validation-summary="All" class="text-danger" hidden></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" >
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="RemenberMe" class="form-check-input">
        <label asp-for="RemenberMe" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn w-100 btn-primary">Entrar</button>

    <a asp-action="Forget" class="w-100 d-block text-center forgetPassword mt-">Esqueceu sua Senha?</a>
    <div class="border-text"></div>
    <a asp-action="Forget" class="w-100 btn btn-success mt-2">Criar Conta</a>

    </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let mensagemErro = '';
        $(".validation-sumary-errors ul li").each(function (){
            mensagemErro += $(this).text() + '<br/>'
        });
        if (mensagemErro != ''){
            Swal.fire(
                title:'Acesso Negado',
                text:
                mensagemErro,
                icon: 'error'
            );
        }
    </script>
}
